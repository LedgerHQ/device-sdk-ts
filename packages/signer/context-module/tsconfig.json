{
  "extends": "@ledgerhq/tsconfig-dsdk/tsconfig.sdk",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib/types",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "emitDeclarationOnly": true,
    "paths": {
      "@/*": ["src/*"],
      "@root/*": ["./*"]
    },
    "resolveJsonModule": true
  },
  "include": ["index.ts", "src", "jest.*.ts"]
}
