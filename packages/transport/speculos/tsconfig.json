{
  "extends": "@ledgerhq/tsconfig-dsdk/tsconfig.sdk",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib/types",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "emitDeclarationOnly": true,
    "paths": {
      "@root/*": ["./*"],
      "@api/*": ["./src/api/*"],
      "@internal/*": ["./src/internal/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["index.ts", "src", "vitest.config.mjs"]
}
