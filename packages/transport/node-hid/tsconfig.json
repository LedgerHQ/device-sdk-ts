{
  "extends": "@ledgerhq/tsconfig-dsdk/tsconfig.sdk",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib/types",
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "emitDeclarationOnly": true,
    "paths": {
      "@api/*": ["./src/api/*"]
    },
    "resolveJsonModule": true,
    "types": ["node", "vitest/globals", "w3c-web-hid", "uuid"],
    "skipLibCheck": true
  },
  "include": ["src", "vitest.*.mjs"]
}
