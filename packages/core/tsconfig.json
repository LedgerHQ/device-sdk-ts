{
  "extends": "@ledgerhq/tsconfig-dsdk/sdk",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/api/*"],
      "@internal/*": ["src/internal/*"],
      "@root/*": ["./*"]
    },
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": ["src", "index.ts", "jest.*.ts"]
}
