{
  "extends": "@ledgerhq/tsconfig-dsdk/sdk",
  "compilerOptions": {
    "outDir": "./lib",
    "baseUrl": ".",
    "paths": {
      "@internal/*": ["src/internal/*"]
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
        "exclude": ["*"]
      }
    ]
  },
  "include": ["src/**/*", "jest.*.ts"]
}
