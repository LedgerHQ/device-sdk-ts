{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["lib/**"],
      "inputs": ["src/**/*.ts"]
    },
    "lint": {
      "dependsOn": ["build", "^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "prettier": {
      "dependsOn": ["^prettier"]
    },
    "prettier:fix": {
      "dependsOn": ["^prettier:fix"]
    },
    "dev": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "inputs": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "test:coverage": {
      "dependsOn": ["build", "lint"],
      "outputs": [],
      "inputs": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "typecheck": {
      "dependsOn": ["build", "^typecheck"]
    },
    "health-check": {
      "dependsOn": ["build", "prettier", "lint", "typecheck"]
    }
  }
}
