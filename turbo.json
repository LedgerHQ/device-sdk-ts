{
  "$schema": "https://turborepo.org/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["lib/**", ".next/**"],
      "inputs": ["src/**/*.ts", "index.ts"]
    },
    "lint": {
      "dependsOn": ["build"]
    },
    "lint:fix": {
      "dependsOn": ["build"]
    },
    "prettier": {
      "dependsOn": ["^prettier"]
    },
    "prettier:fix": {
      "dependsOn": ["^prettier:fix"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts"]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.ts"]
    },
    "typecheck": {
      "dependsOn": ["^build", "^typecheck"]
    },
    "@ledgerhq/device-management-kit-sample#typecheck": {
      "dependsOn": ["build", "^typecheck"]
    },
    "@ledgerhq/ledger-dmk-docs#typecheck": {
      "dependsOn": ["build", "^typecheck"]
    },
    "health-check": {
      "dependsOn": ["^build", "^prettier", "^lint", "^typecheck"]
    }
  }
}
