{
  "extends": "@ledgerhq/tsconfig-dsdk/tsconfig.sdk",
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "bundler",
    "outDir": "./lib",
    "rootDir": "./",
    "types": ["node", "vitest/globals"],
    "skipLibCheck": true,
    "paths": {
      "@ldmk/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "vitest.*.mjs"],
  "exclude": ["node_modules", "lib"]
}
