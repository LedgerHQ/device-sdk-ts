{
  "extends": "@ledgerhq/tsconfig-dsdk/tsconfig.web",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "strictNullChecks": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "eslint.config.mjs",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
