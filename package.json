{
  "name": "@ledgerhq/device-sdk",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "core": "pnpm --filter @ledgerhq/device-sdk-core",
    "signer": "pnpm --filter @ledgerhq/device-sdk-signer",
    "trusted-apps": "pnpm --filter @ledgerhq/device-sdk-trusted-apps",
    "ui": "pnpm --filter @ledgerhq/device-sdk-ui",
    "sample": "pnpm --filter @ledgerhq/device-sdk-sample",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@ledgerhq/eslint-config-dsdk": "workspace:*",
    "@ledgerhq/tsconfig-dsdk": "workspace:*",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "zx": "^7.2.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@8.8.0",
  "engines": {
    "node": ">=18"
  }
}
