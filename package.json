{
  "name": "@ledgerhq/device-sdk",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "prettier": "turbo run prettier",
    "prettier:fix": "turbo run prettier:fix",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "typecheck": "turbo run typecheck",
    "health-check": "turbo run health-check --output-logs=errors-only --continue",
    "core": "pnpm --filter @ledgerhq/device-sdk-core",
    "signer": "pnpm --filter @ledgerhq/device-sdk-signer",
    "trusted-apps": "pnpm --filter @ledgerhq/device-sdk-trusted-apps",
    "ui": "pnpm --filter @ledgerhq/device-sdk-ui",
    "sample": "pnpm --filter @ledgerhq/device-sdk-sample",
    "bump": "changeset version",
    "release": "changeset publish",
    "changelog": "changeset add",
    "commit": "gitmoji -c",
    "commitcl": "pnpm changelog && git add .changeset && pnpm commit"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "concurrently": "^8.2.2",
    "danger": "^12.3.1",
    "eslint": "9.4.0",
    "gitmoji-cli": "^9.3.0",
    "hygen": "^6.2.11",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.4",
    "tsc-alias": "^1.8.10",
    "turbo": "^2.0.4",
    "typescript": "^5.4.5",
    "zx": "^8.1.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.0.5"
}
