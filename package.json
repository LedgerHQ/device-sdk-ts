{
  "name": "@ledgerhq/ldmk",
  "version": "1.0.0",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rimraf -g **/.turbo **/.next **/coverage **/node_modules",
    "build": "turbo run build",
    "build:libs": "turbo run build --filter=./packages/**",
    "dev": "turbo run dev  --concurrency 20 --filter=!./apps/docs",
    "dev:doc": "turbo run dev  --concurrency 20 --filter=!./apps/sample",
    "dev:libs": "turbo run dev --concurrency 20 --filter=./packages/**",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "prettier": "turbo run prettier",
    "prettier:fix": "turbo run prettier:fix",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "typecheck": "turbo run typecheck",
    "health-check": "turbo run health-check --output-logs=errors-only --continue",
    "dmk": "pnpm --filter @ledgerhq/device-management-kit",
    "context-module": "pnpm --filter @ledgerhq/context-module",
    "signer-btc": "pnpm --filter @ledgerhq/device-signer-kit-bitcoin",
    "signer-eth": "pnpm --filter @ledgerhq/device-signer-kit-ethereum",
    "signer-sol": "pnpm --filter @ledgerhq/device-signer-kit-solana",
    "signer-utils": "pnpm --filter @ledgerhq/signer-utils",
    "mockserver-client": "pnpm --filter @ledgerhq/device-mockserver-client",
    "keyring-protocol": "pnpm --filter @ledgerhq/device-trusted-app-kit-ledger-keyring-protocol",
    "ui": "pnpm --filter @ledgerhq/device-sdk-ui",
    "transports": "pnpm --filter @ledgerhq/device-transport-*",
    "transport-web-hid": "pnpm --filter @ledgerhq/device-transport-kit-web-hid",
    "transport-web-ble": "pnpm --filter @ledgerhq/device-transport-kit-web-ble",
    "transport-mockserver": "pnpm --filter @ledgerhq/device-transport-kit-mockserver",
    "transport-rn-ble": "pnpm --filter @ledgerhq/device-transport-kit-react-native-ble",
    "transport-rn-hid": "pnpm --filter @ledgerhq/device-transport-kit-react-native-hid",
    "transport-speculos": "pnpm --filter @ledgerhq/device-transport-kit-speculos",
    "apps": "pnpm --filter @ledgerhq/device-trusted-app-*",
    "app-keyring": "pnpm --filter @ledgerhq/device-trusted-app-kit-ledger-keyring-protocol",
    "flipper": "pnpm --filter @ledgerhq/device-management-kit-flipper-plugin-client",
    "sample": "pnpm --filter @ledgerhq/device-management-kit-sample",
    "mobile": "pnpm --filter @ledgerhq/device-management-kit-mobile-sample",
    "doc": "pnpm --filter @ledgerhq/ledger-dmk-docs",
    "bump": "changeset version",
    "prerelease": "pnpm recursive exec -- pnpm pack",
    "release": "changeset publish",
    "changelog": "changeset add",
    "commit": "gitmoji -c",
    "commitcl": "pnpm changelog && git add .changeset && pnpm commit",
    "danger:local": "pnpm danger local --dangerfile danger/dangerfile-local.ts --base origin/develop",
    "danger:local:fork": "pnpm danger local --dangerfile danger/dangerfile-local-fork.ts --base origin/develop",
    "danger:ci": "pnpm danger ci --dangerfile danger/dangerfile-ci.ts --failOnErrors",
    "cli": "pnpm ldmk-cli",
    "tool": "pnpm ldmk-tool"
  },
  "devDependencies": {
    "@changesets/changelog-github": "catalog:",
    "@changesets/cli": "catalog:",
    "@ledgerhq/ldmk-cli": "workspace:*",
    "@ledgerhq/ldmk-tool": "workspace:*",
    "@types/node": "catalog:",
    "@vitest/coverage-istanbul": "catalog:",
    "concurrently": "catalog:",
    "danger": "catalog:",
    "esbuild": "catalog:",
    "esbuild-node-externals": "catalog:",
    "eslint": "catalog:",
    "gitmoji-cli": "catalog:",
    "hygen": "catalog:",
    "jsdom": "catalog:",
    "prettier": "catalog:",
    "rimraf": "catalog:",
    "tsc-alias": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "zx": "catalog:"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.11.0"
}
